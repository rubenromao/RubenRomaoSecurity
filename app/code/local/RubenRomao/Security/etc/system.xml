<config>
    <tabs>
        <rubenromao translate="label" module="rubenromao_security">
            <label>RubenRomao</label>
            <sort_order>150</sort_order>
        </rubenromao>
    </tabs>
    <sections>
        <rubenromao_security_config translate="label" module="rubenromao_security">
            <label>Security</label>
            <tab>rubenromao</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <rubenromao_security_system_config translate="label" module="rubenromao_security">
                    <label>Login attempts configuration</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <is_active translate="label">
                            <label>Is Active :</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </is_active>
                        <lock_for translate="label">
                            <label>Lock for :</label>
                            <comment>Number in seconds</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>0</can_be_empty>
                        </lock_for>
                    </fields>
                </rubenromao_security_system_config>
            </groups>
        </rubenromao_security_config>
    </sections>
</config>